<resources>
    <color name="white">#FFFFFF</color>
    <color name="red">#FF00</color>
    <color name="black">#000000</color>
    <color name="lloyds_green">#06664c</color>
    <color name="appbar_gradient_start">#065942</color>
    <color name="appbar_gradient_finish">#21846a</color>
    <color name="secondary_text_color">#A9A9A9</color>
    <color name="light_gray">#b2b2b2</color>
    <color name="dark_gray">#646464</color>

    <style name="CustomStyle" parent="Theme.AppCompat.Light.NoActionBar">

    </style>

    <style name="mySpinnerStyle" parent="android:Widget.ListView.DropDown">
        <item name="android:divider">#ffffff</item>
        <item name="android:dividerHeight">1dp</item>
    </style>

    <style name="divider_thin">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@android:color/darker_gray</item>
    </style>

    <style name="divider_medium">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">3dp</item>
        <item name="android:background">@android:color/darker_gray</item>
    </style>
    <style name="help_screen_text">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/lloyds_green</item>
    </style>
    <style name="help_screen_title">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/lloyds_green</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:textColor">@color/lloyds_green</item>
        <item name="android:dropDownListViewStyle">@style/mySpinnerStyle</item>
        <item name="android:dialogTheme">@style/YourAlertDialogTheme</item>
    </style>

    <style name="YourAlertDialogTheme">
        <item name="android:windowNoTitle">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:windowBackground">@drawable/gradient_green</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowMinWidthMajor">@android:dimen/dialog_min_width_major</item>
        <item name="android:windowMinWidthMinor">@android:dimen/dialog_min_width_minor</item>
    </style>

    <style name="MyCustomToolBar" parent="MyTheme">

    </style>

    <style name="MyTheme" parent="@android:style/Theme.Holo.Light">
        <item name="android:actionBarStyle">@style/MyTheme.ActionBarStyle</item>
    </style>

    <style name="MyTheme.ActionBarStyle" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:titleTextStyle">@style/MyTheme.ActionBar.TitleTextStyle</item>
    </style>

    <style name="MyTheme.ActionBar.TitleTextStyle" parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">@color/red</item>
    </style>
</resources>
