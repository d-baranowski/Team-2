<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="branch_title">
        <item name="android:textSize">21sp</item>
        <item name="android:background">@drawable/branch_title_border</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:paddingTop">4sp</item>
        <item name="android:paddingBottom">4sp</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="fontPath">fonts/Oxygen-Bold.otf</item>
    </style>

    <style name="branch_times_and_address">
        <item name="android:background">@color/white</item>
    </style>

    <style name="branch_subtitle">
        <item name="android:textSize">19sp</item>
        <item name="android:paddingTop">3sp</item>
        <item name="android:paddingBottom">3sp</item>
        <item name="fontPath">fonts/Oxygen-Bold.otf</item>
    </style>

    <style name="branch_opening_times">
        <item name="fontPath">fonts/Exo2-Regular.ttf</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="branch_opening_days">
        <item name="fontPath">fonts/Exo2-Bold.ttf</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="branch_address">
        <item name="fontPath">fonts/Exo2-Regular.ttf</item>
        <item name="android:textSize">14sp</item>
    </style>



    <style name="branch_search_bar_input">

        <item name="android:background">@color/white</item>
        <item name="android:textColor">@color/black</item>
        <item name="fontPath">fonts/TitilliumWeb-Bold.ttf</item>
        <item name="android:paddingLeft">10dp</item>

    </style>

    <style name="branch_search_button">
        <item name="android:background">@color/lloyds_green</item>
        <item name="android:textColor">@color/white</item>
    </style>

</resources>
